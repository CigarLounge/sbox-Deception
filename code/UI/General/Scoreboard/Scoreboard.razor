@using Sandbox;
@using System;
@using System.Collections.Generic;

@namespace Murder.UI

@if (!Input.Down(InputButton.Score))
{
	return;
}

<root>
	<ScoreboardInfo />
	<div class="background-color-secondary rounded-bottom groups">
		@foreach (var client in Game.Clients)
		{
			<ScoreboardEntry @Client=@client />
		}
	</div>
</root>

@code
{
	protected override int BuildHash()
	{
		return HashCode.Combine(Input.Down(InputButton.Score), Game.Clients.Count.GetHashCode());
	}
}

<style>
	Scoreboard {
		position: absolute;
		pointer-events: all;
        width: 100%;
        height: 100%;
        opacity: 0;
        z-index: 1;
        justify-content: center;
		align-items: center;
		flex-direction: column;
		transition: bottom 0.2s ease-out;
		max-height: 70%;
		background-color: green;
		&: intro

	{
		bottom: 25px;
	}

	}

	.groups {
		flex-direction: column;
		padding: 8 8 12 8;
		overflow: scroll;
	}

	}</style>