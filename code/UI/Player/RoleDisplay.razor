@using Sandbox;
@using System;

@namespace Murder.UI

@if (Hud.DisplayedPlayer.Role == Role.None)
{
	return;
}

@{
	var player = Hud.DisplayedPlayer;
}

<root class="text-shadow">
	<text style="color: @player.Role.GetColor().Hex">@player.Role.GetTitle()</text>
</root>

@code
{
	protected override int BuildHash()
	{
		var player = Hud.DisplayedPlayer;

		return HashCode.Combine(player.Role.GetHashCode());
	}
}

<style>
	RoleDisplay 
	{
		position: absolute;
		left: 50%;
		bottom: 25px;
		transform: translateX(-50%);
		font-size: 35px;
		font-weight: bold;
	}
</style>