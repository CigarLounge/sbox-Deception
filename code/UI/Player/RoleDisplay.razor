@using Sandbox;
@using System;

@namespace Murder.UI

@if (Hud.DisplayedPlayer.Role == Role.None)
{
	return;
}

<root class="text-shadow">
	<text>@Hud.DisplayedPlayer.Role.GetTitle()</text>
</root>

@code
{
	protected override int BuildHash()
	{
		var player = Hud.DisplayedPlayer;

		return HashCode.Combine(player.Role.GetHashCode(), player.Role.GetColor().GetHashCode());
	}
}

<style>
	RoleDisplay 
	{
		position: absolute;
		left: 50%;
		bottom: 25px;
		transform: translateX(-50%);
		color: @Hud.DisplayedPlayer.Role.GetColor().Hex;
		font-size: 35px;
		font-weight: bold;
	}
</style>