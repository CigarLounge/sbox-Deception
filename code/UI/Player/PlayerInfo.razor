@using Sandbox;
@using Sandbox.UI;
@using System;

@namespace Murder.UI

@if (!Hud.DisplayedPlayer.IsAlive())
{
	return;
}

<root class="text-shadow">
	<NameHealthDisplay />
	<RoleDisplay />
	<CarriableDisplay />
</root>

@code
{
	protected override int BuildHash()
	{
		var player = Hud.DisplayedPlayer;

		return HashCode.Combine(player.GetHashCode(), player.IsAlive());
	}
}

<style>
	PlayerInfo 
	{
		position: absolute;
		width: 100%;
		height: 100%;
		font-size: 35;
		font-weight: 600;
	}
</style>