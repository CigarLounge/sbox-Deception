@using System;

@namespace Murder.UI

@if (!Hud.DisplayedPlayer.IsAlive())
{
    return;
}

<root />

@code
{
    protected override int BuildHash()
    {
        return HashCode.Combine(Hud.DisplayedPlayer.IsAlive());
    }
}

<style>
    Crosshair 
    {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50% -50%);
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background-color: rgba(white .6);
    }
</style>